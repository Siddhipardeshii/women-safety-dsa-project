<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <!-- Terms Title -->
        <TextView
            android:id="@+id/tvTerms"
            android:text="Terms and Conditions\n\n"
            android:textStyle="bold"
            android:textSize="27sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Interactive Permission Explanation -->
        <TextView
            android:id="@+id/tvPermissionInfo"
            android:text="To help you stay safe, we request the following permissions:\n\n"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 📞 Calling: To quickly contact your emergency contacts.\n\n• 📍 Live Location: So your loved ones can track your location in real-time if needed.\n\n• 📩 SMS: To send emergency alerts when you’re in danger."
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Trust Message -->
        <TextView
            android:text="We value your privacy and will only use these features with your full consent."
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />


        <!-- Accept Checkbox -->
        <CheckBox
            android:id="@+id/cbAccept"
            android:text="I accept the above terms and give permission"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:text="Register"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
